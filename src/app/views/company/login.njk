{%extends 'layout.njk'%}

{%block content%}
{%include 'headers/header.njk'%}
<br>
<br>
<br>
<br>
<main class="form-signin">
    <form class="text-center" action="/company/login" method="POST">
        <h1 class="h3 mb-3 fw-normal">Acessar conta</h1>
        <label for="email" class="visually-hidden">Endereço de Email</label>
        <input style="width: 400px" class="form-control mx-auto" placeholder="Endereço de Email" type="email" name="email" id="email" required>
        
        <label for="password" class="visually-hidden">Senha</label>
        <input style="width: 400px" class="form-control mx-auto" placeholder="Senha" type="password" name="password" id="password" required>
        <br>
        <button class="w-400 btn btn-lg btn-primary" type="submit">Acessar conta</button>
    </form>
</main>
<br>
<a style="position: absolute; right: 610px; text-decoration: none; color: grey;" href="#">Esqueci minha senha</a>
{%endblock content%}