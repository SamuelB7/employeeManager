{%extends 'layout.njk'%}

{%block content%}
{%include 'headers/header.njk'%}
<br>
<br>
<br>
<h3 class="text-center">Atualizar Dados</h3>
<br>

<form class="text-center" action="/company/register?_method=PUT" method="POST">
    <input type="hidden" name="id" value="{{company.id}}">
    <div class="form-group">
        <label for="name">Nome da Empresa</label>
        <input style="max-width: 400px" class="form-control mx-auto" type="text" name="name" id="name" value="{{company.name}}" required>
    </div>
    <div class="form-group">
        <label for="cnpj">CNPJ</label>
        <input style="max-width: 400px" class="form-control mx-auto" type="text" name="cnpj" id="cnpj" onkeypress="$(this).mask('00.000.000/0000-00')" value="{{company.cnpj}}" required>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input style="max-width: 400px" class="form-control mx-auto" type="email" name="email" id="email" value="{{company.email}}" required>
    </div>
    <div class="form-group">
        <label for="password">Nova Senha</label>
        <input style="max-width: 400px" class="form-control mx-auto" type="password" name="password" id="password" value="{{company.password}}" required>
    </div>
    <br>
    <div class="container text-center">
        <button type="submit" class="btn btn-primary btn-lg btn-block" style="width: 200px;">Atualizar dados</button>
    </div>
</form>
{%endblock content%}