{%extends 'layout.njk'%}

{%block content%}
<br>
<br>
<br>
<h3 class="text-center">Cadastre-se</h3>
<br>

<form class="text-center" action="/company/register" method="POST">
    <div class="form-group">
        <label for="name">Nome da Empresa</label>
        <input style="max-width: 400px" class="form-control mx-auto" type="text" name="name" id="name">
    </div>
    <div class="form-group">
        <label for="cnpj">CNPJ</label>
        <input style="max-width: 400px" class="form-control mx-auto" type="text" name="cnpj" id="cnpj" onkeypress="$(this).mask('00.000.000/0000-00')">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input style="max-width: 400px" class="form-control mx-auto" type="email" name="email" id="email">
    </div>
    <div class="form-group">
        <label for="password">Senha</label>
        <input style="max-width: 400px" class="form-control mx-auto" type="password" name="password" id="password">
    </div>
    <br>
    <div class="container text-center">
        <button type="submit" class="btn btn-primary btn-lg btn-block" style="width: 200px;">Criar conta</button>
    </div>
</form>
{%endblock content%}